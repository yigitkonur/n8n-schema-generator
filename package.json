{
  "name": "n8n-workflow-validator",
  "version": "1.4.0",
  "description": "n8n workflow validator using official n8n validation engine - identical to n8n editor behavior",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "n8n-workflow-validator": "dist/cli.js",
    "n8n-validate": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:scripts": "npx tsc -p scripts/tsconfig.json",
    "dev": "tsc --watch",
    "validate": "node dist/cli.js",
    "test": "node dist/cli.js test/fixtures/*.json",
    "extract:schemas": "npm run build:scripts && node dist/scripts/extract-schemas.js",
    "extract:validation": "npm run build:scripts && node dist/scripts/extract-validation-rules.js",
    "extract:all": "npm run build:scripts && node dist/scripts/extract-schemas.js && node dist/scripts/extract-validation-rules.js"
  },
  "keywords": [
    "n8n",
    "workflow",
    "validation",
    "cli",
    "json",
    "validator",
    "automation"
  ],
  "author": "Yigit Konur",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yigitkonur/n8n-workflow-validator.git"
  },
  "bugs": {
    "url": "https://github.com/yigitkonur/n8n-workflow-validator/issues"
  },
  "homepage": "https://github.com/yigitkonur/n8n-workflow-validator#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "esprima-next": "^5.8.4",
    "jsonc-parser": "^3.3.1",
    "jsonrepair": "^3.8.0",
    "lodash": "^4.17.21",
    "n8n-nodes-base": "^1.120.1",
    "n8n-workflow": "^1.119.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
