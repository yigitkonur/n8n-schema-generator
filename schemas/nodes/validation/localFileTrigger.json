{
  "nodeType": "n8n-nodes-base.localFileTrigger",
  "displayName": "Local File Trigger",
  "version": 1,
  "rules": [
    {
      "field": "triggerOn",
      "type": "options",
      "required": true,
      "default": "",
      "enumValues": [
        "file",
        "folder"
      ]
    },
    {
      "field": "path",
      "type": "string",
      "required": false,
      "default": "",
      "displayOptions": {
        "show": {
          "triggerOn": [
            "file"
          ]
        }
      }
    },
    {
      "field": "path",
      "type": "string",
      "required": false,
      "default": "",
      "displayOptions": {
        "show": {
          "triggerOn": [
            "folder"
          ]
        }
      }
    },
    {
      "field": "events",
      "type": "multiOptions",
      "required": true,
      "default": [],
      "enumValues": [
        "add",
        "change",
        "unlink",
        "addDir",
        "unlinkDir"
      ],
      "displayOptions": {
        "show": {
          "triggerOn": [
            "folder"
          ]
        }
      }
    },
    {
      "field": "options",
      "type": "collection",
      "required": false,
      "default": {}
    }
  ],
  "computedDefaults": {
    "triggerOn": "",
    "events": [],
    "options": {}
  },
  "hasFilter": false,
  "fixedCollections": []
}