{
  "nodeType": "n8n-nodes-base.perplexity",
  "displayName": "Perplexity",
  "version": 1,
  "rules": [
    {
      "field": "resource",
      "type": "hidden",
      "required": false,
      "default": "chat"
    },
    {
      "field": "operation",
      "type": "options",
      "required": false,
      "default": "complete",
      "enumValues": [
        "complete"
      ],
      "displayOptions": {
        "show": {
          "resource": [
            "chat"
          ]
        }
      }
    },
    {
      "field": "model",
      "type": "options",
      "required": true,
      "default": "sonar",
      "enumValues": [
        "sonar",
        "sonar-deep-research",
        "sonar-pro",
        "sonar-reasoning",
        "sonar-reasoning-pro"
      ],
      "displayOptions": {
        "show": {
          "resource": [
            "chat"
          ],
          "operation": [
            "complete"
          ]
        }
      }
    },
    {
      "field": "messages",
      "type": "fixedCollection",
      "required": true,
      "default": {
        "message": [
          {
            "role": "user",
            "content": ""
          }
        ]
      },
      "displayOptions": {
        "show": {
          "resource": [
            "chat"
          ],
          "operation": [
            "complete"
          ]
        }
      }
    },
    {
      "field": "simplify",
      "type": "boolean",
      "required": false,
      "default": false,
      "displayOptions": {
        "show": {
          "resource": [
            "chat"
          ],
          "operation": [
            "complete"
          ]
        }
      }
    },
    {
      "field": "options",
      "type": "collection",
      "required": false,
      "default": {},
      "displayOptions": {
        "show": {
          "resource": [
            "chat"
          ],
          "operation": [
            "complete"
          ]
        }
      }
    }
  ],
  "computedDefaults": {
    "resource": "chat",
    "operation": "complete",
    "model": "sonar",
    "messages": {
      "message": [
        {
          "content": "",
          "role": "user"
        }
      ]
    },
    "simplify": false,
    "options": {}
  },
  "hasFilter": false,
  "fixedCollections": [
    "messages"
  ]
}