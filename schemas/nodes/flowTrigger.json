{
  "name": "flowTrigger",
  "displayName": "Flow Trigger",
  "description": "Handle Flow events via webhooks",
  "group": [
    "trigger"
  ],
  "version": 1,
  "defaults": {
    "resource": "",
    "listIds": "",
    "taskIds": ""
  },
  "inputs": [],
  "outputs": [
    "main"
  ],
  "properties": [
    {
      "name": "resource",
      "displayName": "Resource",
      "type": "options",
      "default": "",
      "description": "Resource that triggers the webhook",
      "options": [
        {
          "name": "Project",
          "value": "list"
        },
        {
          "name": "Task",
          "value": "task"
        }
      ]
    },
    {
      "name": "listIds",
      "displayName": "Project ID",
      "type": "string",
      "default": "",
      "required": true,
      "description": "Lists IDs, perhaps known better as \"Projects\" separated by a comma (,)",
      "displayOptions": {
        "show": {
          "resource": [
            "list"
          ]
        },
        "hide": {
          "resource": [
            "task"
          ]
        }
      }
    },
    {
      "name": "taskIds",
      "displayName": "Task ID",
      "type": "string",
      "default": "",
      "required": true,
      "description": "Task IDs separated by a comma (,)",
      "displayOptions": {
        "show": {
          "resource": [
            "task"
          ]
        },
        "hide": {
          "resource": [
            "list"
          ]
        }
      }
    }
  ],
  "credentials": [
    {
      "name": "flowApi",
      "required": true
    }
  ],
  "hasVersions": false
}