      "options": [
        {
          "name": "File",
          "value": "file"
        },
        {
          "name": "Folder",
          "value": "folder"
        }
      ]
    },
    {
      "name": "targetId",
      "displayName": "Target ID",
      "type": "string",
      "default": "",
      "description": "The ID of the item to trigger a webhook"
    }
