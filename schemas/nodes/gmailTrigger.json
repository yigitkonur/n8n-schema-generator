{
  "name": "gmailTrigger",
  "displayName": "Gmail Trigger",
  "description": "Fetches emails from Gmail and starts the workflow on specified polling intervals.",
  "group": [
    "trigger"
  ],
  "version": [
    1,
    1.1,
    1.2,
    1.3
  ],
  "defaults": {
    "authentication": "oAuth2",
    "event": "messageReceived",
    "simple": true,
    "filters": {},
    "options": {}
  },
  "inputs": [],
  "outputs": [
    "main"
  ],
  "properties": [
    {
      "name": "authentication",
      "displayName": "Authentication",
      "type": "options",
      "default": "oAuth2",
      "options": [
        {
          "name": "OAuth2 (recommended)",
          "value": "oAuth2"
        },
        {
          "name": "Service Account",
          "value": "serviceAccount"
        }
      ]
    },
    {
      "name": "event",
      "displayName": "Event",
      "type": "options",
      "default": "messageReceived",
      "options": [
        {
          "name": "Message Received",
          "value": "messageReceived"
        }
      ]
    },
    {
      "name": "simple",
      "displayName": "Simplify",
      "type": "boolean",
      "default": true,
      "description": "Whether to return a simplified version of the response instead of the raw data"
    },
    {
      "name": "filters",
      "displayName": "Filters",
      "type": "collection",
      "default": {},
      "options": [
        {
          "displayName": "Include Spam and Trash",
          "name": "includeSpamTrash",
          "type": "boolean",
          "default": false,
          "description": "Whether to include messages from SPAM and TRASH in the results"
        },
        {
          "displayName": "Include Drafts",
          "name": "includeDrafts",
          "type": "boolean",
          "default": false,
          "description": "Whether to include email drafts in the results"
        },
        {
          "displayName": "Label Names or IDs",
          "name": "labelIds",
          "type": "multiOptions",
          "typeOptions": {
            "loadOptionsMethod": "getLabels"
          },
          "default": [],
          "description": "Only return messages with labels that match all of the specified label IDs. Choose from the list, or specify IDs using an <a href=\"https://docs.n8n.io/code/expressions/\">expression</a>."
        },
        {
          "displayName": "Search",
          "name": "q",
          "type": "string",
          "default": "",
          "placeholder": "has:attachment",
          "hint": "Use the same format as in the Gmail search box. <a href=\"https://support.google.com/mail/answer/7190?hl=en\">More info</a>.",
          "description": "Only return messages matching the specified query"
        },
        {
          "displayName": "Read Status",
          "name": "readStatus",
          "type": "options",
          "default": "unread",
          "hint": "Filter emails by whether they have been read or not",
          "options": [
            {
              "name": "Unread and read emails",
              "value": "both"
            },
            {
              "name": "Unread emails only",
              "value": "unread"
            },
            {
              "name": "Read emails only",
              "value": "read"
            }
          ]
        },
        {
          "displayName": "Sender",
          "name": "sender",
          "type": "string",
          "default": "",
          "description": "Sender name or email to filter by",
          "hint": "Enter an email or part of a sender name"
        }
      ],
      "placeholder": "Add Filter"
    },
    {
      "name": "options",
      "displayName": "Options",
      "type": "collection",
      "default": {},
      "options": [
        {
          "displayName": "Attachment Prefix",
          "name": "dataPropertyAttachmentsPrefixName",
          "type": "string",
          "default": "attachment_",
          "description": "Prefix for name of the binary property to which to write the attachment. An index starting with 0 will be added. So if name is 'attachment_' the first attachment is saved to 'attachment_0'."
        },
        {
          "displayName": "Download Attachments",
          "name": "downloadAttachments",
          "type": "boolean",
          "default": false,
          "description": "Whether the email's attachments will be downloaded"
        }
      ],
      "displayOptions": {
        "hide": {
          "simple": [
            true
          ]
        }
      },
      "placeholder": "Add option"
    }
  ],
  "credentials": [
    {
      "name": "googleApi",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "serviceAccount"
          ]
        }
      }
    },
    {
      "name": "gmailOAuth2",
      "required": true,
      "displayOptions": {
        "show": {
          "authentication": [
            "oAuth2"
          ]
        }
      }
    }
  ],
  "requiredFields": [],
  "optionalFields": [
    "authentication",
    "event",
    "simple",
    "filters",
    "options"
  ],
  "parameterTypes": {
    "authentication": "options",
    "event": "options",
    "simple": "boolean",
    "filters": "collection",
    "options": "collection"
  },
  "hasVersions": false
}