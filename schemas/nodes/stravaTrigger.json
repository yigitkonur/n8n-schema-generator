{
  "name": "stravaTrigger",
  "displayName": "Strava Trigger",
  "description": "Starts the workflow when Strava events occur",
  "group": [
    "trigger"
  ],
  "version": 1,
  "defaults": {
    "object": "*",
    "event": "*",
    "resolveData": true,
    "options": {}
  },
  "inputs": [],
  "outputs": [
    "main"
  ],
  "properties": [
    {
      "name": "object",
      "displayName": "Object",
      "type": "options",
      "default": "*",
      "options": [
        {
          "name": "[All]",
          "value": "*"
        },
        {
          "name": "Activity",
          "value": "activity"
        },
        {
          "name": "Athlete",
          "value": "athlete"
        }
      ]
    },
    {
      "name": "event",
      "displayName": "Event",
      "type": "options",
      "default": "*",
      "options": [
        {
          "name": "[All]",
          "value": "*"
        },
        {
          "name": "Created",
          "value": "create"
        },
        {
          "name": "Deleted",
          "value": "delete"
        },
        {
          "name": "Updated",
          "value": "update"
        }
      ]
    },
    {
      "name": "resolveData",
      "displayName": "Resolve Data",
      "type": "boolean",
      "default": true,
      "description": "By default the webhook-data only contain the Object ID. If this option gets activated, it will resolve the data automatically."
    },
    {
      "name": "options",
      "displayName": "Options",
      "type": "collection",
      "default": {},
      "options": [
        {
          "displayName": "Delete If Exist",
          "name": "deleteIfExist",
          "type": "boolean",
          "default": false,
          "description": "Strava allows just one subscription at all times. If you want to delete the current subscription to make room for a new subscription with the current parameters, set this parameter to true. Keep in mind this is a destructive operation."
        }
      ],
      "placeholder": "Add option"
    }
  ],
  "credentials": [
    {
      "name": "stravaOAuth2Api",
      "required": true
    }
  ],
  "requiredFields": [],
  "optionalFields": [
    "object",
    "event",
    "resolveData",
    "options"
  ],
  "parameterTypes": {
    "object": "options",
    "event": "options",
    "resolveData": "boolean",
    "options": "collection"
  },
  "hasVersions": false
}