{
  "name": "microsoftDynamicsOAuth2Api",
  "displayName": "Microsoft Dynamics OAuth2 API",
  "properties": [
    {
      "name": "subdomain",
      "type": "string",
      "default": "",
      "required": true
    },
    {
      "name": "region",
      "type": "options",
      "default": "crm.dynamics.com"
    },
    {
      "name": "scope",
      "type": "hidden",
      "default": "=openid offline_access https://{{$self.subdomain}}.{{$self.region}}/.default"
    }
  ]
}