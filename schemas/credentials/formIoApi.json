{
  "name": "formIoApi",
  "displayName": "Form.io API",
  "documentationUrl": "formiotrigger",
  "properties": [
    {
      "displayName": "Environment",
      "name": "environment",
      "type": "options",
      "default": "cloudHosted",
      "options": [
        {
          "name": "Cloud-Hosted",
          "value": "cloudHosted"
        },
        {
          "name": "Self-Hosted",
          "value": "selfHosted"
        }
      ]
    },
    {
      "displayName": "Self-Hosted Domain",
      "name": "domain",
      "type": "string",
      "default": "",
      "placeholder": "https://www.mydomain.com",
      "displayOptions": {
        "show": {
          "environment": [
            "selfHosted"
          ]
        }
      }
    },
    {
      "displayName": "Email",
      "name": "email",
      "type": "string",
      "placeholder": "name@email.com",
      "default": ""
    },
    {
      "displayName": "Password",
      "name": "password",
      "type": "string",
      "typeOptions": {
        "password": true
      },
      "default": ""
    },
    {
      "displayName": "Token",
      "name": "token",
      "type": "hidden",
      "typeOptions": {
        "expirable": true,
        "password": true
      },
      "default": ""
    }
  ],
  "authenticate": "custom"
}