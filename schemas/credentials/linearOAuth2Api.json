{
  "name": "linearOAuth2Api",
  "displayName": "Linear OAuth2 API",
  "properties": [
    {
      "name": "grantType",
      "type": "hidden",
      "default": "authorizationCode"
    },
    {
      "name": "authUrl",
      "type": "hidden",
      "default": "https://linear.app/oauth/authorize",
      "required": true
    },
    {
      "name": "accessTokenUrl",
      "type": "hidden",
      "default": "https://api.linear.app/oauth/token",
      "required": true
    },
    {
      "name": "actor",
      "type": "options",
      "default": "user"
    },
    {
      "name": "includeAdminScope",
      "type": "boolean",
      "default": false
    },
    {
      "name": "scope",
      "type": "hidden",
      "default": "={{$self[\"includeAdminScope\"] ? \"read write issues:create comments:create admin\" : \"read write issues:create comments:create\"}}",
      "required": true
    },
    {
      "name": "authQueryParameters",
      "type": "hidden",
      "default": "={{\"actor=\"+$self[\"actor\"]}}"
    },
    {
      "name": "authentication",
      "type": "hidden",
      "default": "body"
    }
  ]
}