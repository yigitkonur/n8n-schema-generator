{
  "type": "object",
  "description": "Declarative API routing configuration",
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "PATCH",
            "DELETE"
          ]
        },
        "url": {
          "type": "string"
        },
        "baseURL": {
          "type": "string"
        },
        "headers": {
          "type": "object"
        },
        "body": {
          "type": "object"
        },
        "qs": {
          "type": "object"
        }
      }
    },
    "output": {
      "type": "object",
      "properties": {
        "postReceive": {
          "type": "array"
        }
      }
    }
  }
}